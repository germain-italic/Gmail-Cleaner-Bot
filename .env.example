# Google Service Account credentials file path
GOOGLE_CREDENTIALS_PATH=./credentials.json

# Email address to impersonate (your Workspace email)
GMAIL_USER_EMAIL=your-email@your-domain.com

# Database path
DATABASE_PATH=./data/gmail_cleaner.db

# Log settings
LOG_PATH=./logs
LOG_LEVEL=INFO
LOG_MAX_SIZE=5242880
LOG_BACKUP_COUNT=3

# Optional: Dry run mode (set to true to test without deleting)
DRY_RUN=false

# Optional: Max messages to process per rule (default 500)
# Gmail API limits (Google Workspace):
#   - 1,200,000 quota units/min per project
#   - 15,000 quota units/min per user
#   - messages.list = 5 units, messages.get = 5 units
#   - messages.trash = 5 units, messages.delete = 10 units
#   - ~10-15 units per email processed = ~1000 emails/min max
MAX_SEARCH_RESULTS=500

# Folder exclusions (exclude these folders from search)
EXCLUDE_TRASH=false
EXCLUDE_SPAM=false
EXCLUDE_DRAFTS=false
EXCLUDE_SENT=false

# Deployment settings (for ./manage.sh deploy)
DEPLOY_SSH_HOST=
DEPLOY_PLESK_DOMAIN=
DEPLOY_PLESK_REPO=

# Optional: Python path (default: auto-detect)
# PYTHON_PATH=/opt/alt/python311/bin/python3

# Email report settings (optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your_password
SMTP_FROM=noreply@example.com
SMTP_TO=admin@example.com
SMTP_TLS=true
